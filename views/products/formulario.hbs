<div class="container">
    <h1>Formulario Nuevo Producto</h1>
    <form action="/products/create" method="post">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" name="nombre">
        </div>
        <div class="form-group">
            <label for="departamento">Departamento</label>
            <input type="text" class="form-control" name="departamento">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input type="number" class="form-control" name="precio">
        </div>

        <label for="activo">Activo</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="activo" value="true" checked>
            <label class="form-check-label">True</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="activo" value="false">
            <label class="form-check-label">False</label>
        </div>
        <button type="submit" class="btn btn-primary btn-crear">Crear Producto</button>
    </form>
    <a href="/products"><button class="btn btn-primary btn-volver">Volver</button></a>
</div>